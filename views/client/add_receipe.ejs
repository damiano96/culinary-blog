<% include include/header.ejs %>
<div class="container-fluid content" >

    <div class="container" style="min-height: 93vh">

        <header style="margin-top: 0;"><h2 class="text-center" style="padding-top: 50px;"> <%=title%></h2> </header>

        <section class="przepisy_home">
            <h2><%=message%></h2>
            <form style="margin-top: 150px" method="post" id="myForm" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label">Nazwa przepisu:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="nazwa_przepis" maxlength="45" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label">Instrukcja:</label>
                            <div class="col-sm-8">
                                <textarea class="form-control" rows="7" id="instrukcja" name="instrukcja" required></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label">Krótki opis(40znaków):</label>
                            <div class="col-sm-8">
                                <textarea class="form-control" rows="1" id="krotki_opis" name="krotki_opis" maxlength="45" required></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label">Dodaj skladniki:</label>
                            <div class="col-sm-7" id="skladniki-form">
                                <div class="row">
                                    <div class="col-sm-7"><input type="text" class="form-control" name="skladnik1" placeholder="Nazwa" required></div>
                                    <div class="col-sm-5"><input type="number" class="form-control" name="skladnik1" placeholder="Ilość (gramy)" required></div>
                                </div>
                                <input type="hidden" value="1" name="liczbaSkladnikow" id="liczbaSkladnikow">
                            </div>
                            <div class="col-sm-2">
                                <a href="#" onclick="addComponents()"> <i class="fa fa-plus-square"></i></a>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 form-control-label">Wybierz kategorie:</label>
                            <div class="col-sm-8">
                                <select class="form-control custom-select" name="kategoria" id="kategoria">
                                    <%for(let cat of kategorie) { %>
                                    <option><%=cat.nazwa_kategorii%></option>
                                    <% } %>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" name="zdjecie" id="zdjecie">
                                <label for="zdjecieUpload" class="custom-file-label">Wybierz zdjęcie...</label>

                            </div>
                        </div>
                        <div class="row" style="margin-top: 30px;">
                            <input type="submit" class="btn btn-outline-success btn-block" value="Dodaj">
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"></script>
<script src="/javascripts/main.js"></script>
</body>
</html>